<% if(recipe != null) { %>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%- recipe.name %></li>
    </ol>
  </nav>

  <div class="container">
    <div class="row">
      <div class="col-12 col-md-4">
        <img src="/upload/<%- recipe.image %>" class="img-fluid sticky-top mb-3" style="top: 20px; position: relative; max-height:60%;" alt="<%- recipe.name %>" loading="lazy">
      </div>
      <div class="col-12 col-md-8">
        <h1 class="mb-4 mb-md-4"><%- recipe.name %></h1>
        <p><i class="bi bi-tag"></i> <%- recipe.category %></p>
        <h4>Cooking Instructions</h4>
        <p style="white-space: pre-line;"><%- recipe.description %></p>

        <h4>Ingredients</h4>
        <ul class="list-group list-group-flush">
          <% recipe.ingredients.forEach(function(ingredient, index){ %>
            <li class="list-group-item"><%= ingredient %></li>
          <% }) %>
        </ul>

        <div class="pt-4 justify-content-center align-items-center d-flex">
          <!-- Update button for the entire recipe -->
          <a href="/updaterecipe/<%- recipe._id %>" class="btn btn-primary btn-sm me-2 py-2">Update</a>
          <!-- Delete button for the entire recipe -->
          <!-- <a href="/delete/<%- recipe._id %>" class="btn btn-danger btn-sm py-2">Delete Recipe</a> -->
          <form method="POST" action="/delete/<%= recipe._id %>">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger btn-sm me-2 py-2">Delete</button>
          </form>
        </div>
      </div>
    </div>
  </div>
<% } else { %>
  <p>No items found ....</p>
<% } %>
