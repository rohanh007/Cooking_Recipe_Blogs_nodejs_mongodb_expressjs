<div class="container">
    <h1 class="pb-4">Explore Latest</h1>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-5 g-2 g-lg-3">
      <% if(recipe !=' ') { %>
        <% recipe.forEach(function(recipe, index) { %>
          <a href="/recipe/<%= recipe._id %>" class="col" style="text-decoration: none;">
          <div class="col text-center category_link justify-content-center">
            <div class="category_img category_img--large shadow ">
                <img src="upload/<%= recipe.image %>" alt="<%= recipe.name %>" loading="lazy" class="img-fluid eximg-fixed">
            </div>
            <div class="pt-1 justify-content-center flex-column "><%= recipe.name %></div>
          </div>
        </a>
        <% }) %>
      <% } else { %>
        <p>No items Found .......</p>
      <% } %>
    </div>
  </div>
  
