<h1 class="pb-4">Explore Latest </h1>


<div class="row row-cols2 row-cols-lg-5 g-2 g-lg-3">
    <%  if(recipe !=' '){ %>

    <a href="/recipe/<%= recipe._id %>" class="col text-center category_link mx-5">
        <div class="category_img category_img--large shadow img-fixed ">
          <img src="upload/<%= recipe.image %>" alt="<%= recipe.name %> " loading="lazy">
        </div>
        <div class="pt-1"><%= recipe.name %></div>
    </a>
    <% } else {%>
         <p>No items Found .......</p>
     <% } %>
  
 </div>